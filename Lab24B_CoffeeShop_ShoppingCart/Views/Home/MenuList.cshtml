    <tr>
        <th><a href="~/Home/MenuListSorted?column=ItemID">Item ID</a></th>
        <th><a href="~/Home/MenuListSorted?column=ItemName">Item Name</th>
        <th><a href="~/Home/MenuListSorted?column=Description">Description</th>
        <th><a href="~/Home/MenuListSorted?column=Price">Price</th>
        <th><a href="~/Home/MenuListSorted?column=Quantity">Quantity</th>
        <th>Action</th>
    </tr>

    @foreach (Item item in ViewBag.Items)
    {
        <tr>
            <td>@item.ItemID</td>
            <td>@item.ItemName</td>
            <td>@item.Description</td>
            <td>$ @item.Price.00</td>
            <td>@item.Quantity</td>
            <td><a href="~/Home/Add?id=@item.ItemID" class="btn btn-primary">Add to Bag</a></td>
        </tr>

