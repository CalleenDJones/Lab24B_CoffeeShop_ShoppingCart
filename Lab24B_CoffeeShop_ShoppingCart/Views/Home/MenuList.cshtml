<form action="~/Home/MenuListbyID" method="get">
    <label>
        Search by Item ID:
        <select name="itemID">
            @foreach (Item item in ViewBag.Items)
            {
                <option value="@item.ItemID">
                    @item.ItemID
                </option>
            }
        </select>
        @*<input type="number" name="itemID" class="form-control" />*@
    </label>
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<br />

<form action="~/Home/MenuListbyItemName" method="get">
    <label>
        Search by Item Name:
        <input type="text" name="itemName" class="form-control" />
    </label>
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<br />

<form action="~/Home/MenuListbyDescription" method="get">
    <label>
        Search by Description:
        <input type="text" name="description" class="form-control" />
    </label>
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<br />

<form action="~/Home/MenuListbyPrice" method="get">
    <label>
        Search by Price:
        <input type="number" name="price" class="form-control" />
    </label>
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<br />

<form action="~/Home/MenuListbyQuantity" method="get">
    <label>
        Search by Quantity:
        <input type="number" name="quantity" class="form-control" />
    </label>
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
